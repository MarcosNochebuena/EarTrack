<%= content_tag :div, id: dom_id(earring), class: "col-sm-6 col-lg-3 mb-4" do %>
  <div class="card h-100">
      <div class="image-container" style="width: 100%; height: 200px; overflow: hidden;">
        <% if earring.photo.present? %>
            <%= image_tag earring.photo, class: "rounded img-fluid", style: "width: 100%; height: 100%; object-fit: cover;" %>
        <% else %>
          <img src="/sin-imagen.jpg" class="rounded img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
        <% end %>
      </div>
    <div class="card-body d-flex flex-column">
      <h5 class="card-title text-center"><%= earring.earring %></h5>
      <p class="card-text text-center"><%= earring.key.num_key %></p>
      <div class="mt-auto text-center">
        <%= link_to(earring, class: "btn btn-sm me-2 btn-primary" ) do %>
          <i class="fa-solid fa-eye text-white"></i>
        <% end %>
        <%= link_to earring_path(earring), data: { turbo_method: :delete, turbo_confirm: "Seguro?" }, class: "btn btn-danger btn-sm", "data-turbo-frame": "_top" do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
