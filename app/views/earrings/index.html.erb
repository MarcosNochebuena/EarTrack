<p style="color: green">
  <%= notice %>
</p>



<div id="earrings" class="container">
  <div class="card">
    <div class="card-header bg-dark d-flex justify-content-between align-items-center">
    <h3 class="text-center text-white mx-auto">Aretes</h3>
      <%= link_to "Agregar arete", new_earring_path, class: 'btn btn-success' %>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Clave</th>
              <th scope="col">No. Arete</th>
              <th scope="col">Edad (meses)</th>
              <th scope="col">Genero</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @earrings.each_with_index do |earring, index| %>
              <tr>
                <%= render earring, index: index+1  %>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>