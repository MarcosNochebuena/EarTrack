<div class="card-body">
  <%= form_with(model: @setting) do |form| %>
    <% if @setting.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this @setting from being saved:</h2>

        <ul>
          <% @setting.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :upp_key,  class: "form-label" %>
      <%= form.text_field :upp_key,  class: "form-control" %>
    </div>

    <div>
      <%= form.label :producer_full_name,  class: "form-label" %>
      <%= form.text_field :producer_full_name,  class: "form-control" %>
    </div>

    <div>
      <%= form.label :produced_adress,  class: "form-label" %>
      <%= form.text_field :produced_adress,  class: "form-control" %>
    </div>

   <div class="mt-2 text-end">
     <%= link_to "Cancelar", settings_path, class: "btn btn-danger" %>
     <%= form.submit "Guardar", class: "btn btn-success" %>
   </div>
  <% end %>
</div>
